# ========================================
# Nifty 50 Trading System - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit your actual .env file to git!

# ========================================
# BROKER API CREDENTIALS
# ========================================

# Zerodha Kite Connect API
ZERODHA_API_KEY=your_api_key_here
ZERODHA_API_SECRET=your_api_secret_here
ZERODHA_ACCESS_TOKEN=your_access_token_here

# Upstox API (Optional)
UPSTOX_API_KEY=
UPSTOX_API_SECRET=
UPSTOX_ACCESS_TOKEN=

# ========================================
# KAFKA CONFIGURATION
# ========================================
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_RAW_TICKS=raw-ticks
KAFKA_TOPIC_CANDLES=candles
KAFKA_TOPIC_SIGNALS=signals
KAFKA_CONSUMER_GROUP=trading-system

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ========================================
# TIMESCALEDB CONFIGURATION
# ========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=trading
POSTGRES_PASSWORD=trading123
POSTGRES_DB=nifty50
TIMESCALE_URL=postgresql://trading:trading123@localhost:5432/nifty50

# ========================================
# APPLICATION PORTS
# ========================================
INGESTION_PORT=3001
PROCESSING_PORT=3002
ANALYSIS_PORT=3003
AGGREGATION_PORT=3004
SIGNAL_PORT=3005
API_PORT=4000
DASHBOARD_PORT=3000

# ========================================
# TELEGRAM BOT
# ========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ========================================
# MONITORING
# ========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
NODE_ENV=development

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_TELEGRAM_ALERTS=true
ENABLE_OPTIONS_ANALYSIS=true
